	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="images/img-01.png" alt="IMG">
				</div>

				<form class="login100-form validate-form">
					<span class="login100-form-title">
						Enter Tracking
					</span>

					
					<input class="input100" id="input-field" type="text" onkeyup="removeSpecialCharacters()"><br>
					<button class="login100-form-btn" id="copy-button" onclick="copyToClipboard()">Copy Tracking</button><br>
					<button class="login100-form-btn" id="concat-button" onclick="concatAndOpenLink()">Track parcel</button><br>
					
					
					
				</form>
			</div>
		</div>
	</div>
	
	
	<script>
		function removeSpecialCharacters() {
		  // Get the input field
		  var inputField = document.getElementById("input-field");
		  
		  // Remove special characters from the string
		  var cleanedString = inputField.value.replace(/[^a-zA-Z0-9]/g, "");
		  
		  // Update the input field with the cleaned string
		  inputField.value = cleanedString;
		}
		
		function copyToClipboard() {
		  // Get the input field
		  var inputField = document.getElementById("input-field");
		  
		  // Select the text in the input field
		  inputField.select();
		  
		  // Copy the selected text to the clipboard
		  document.execCommand("copy");
		}
		
		function concatAndOpenLink() {
		  // Get the input field
		  var inputField = document.getElementById("input-field");
		  
		  // Concatenate the input field's value with the base URL
		  var concatenatedLink = "https://www.evri.com/track/parcel/" + inputField.value;
		  
		  // Open the concatenated link in a new tab
		  window.open(concatenatedLink, "_blank");
		}
		</script>
	
